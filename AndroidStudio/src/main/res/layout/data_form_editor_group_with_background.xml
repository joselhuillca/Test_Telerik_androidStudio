<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:background="@drawable/data_form_table_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/emptyView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/data_form_group_header"
            android:layout_toRightOf="@id/emptyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/data_form_editor_header_text_size"
            android:textColor="@color/reservations_example_header"
            android:layout_marginLeft="@dimen/data_form_editor_margin_horizontal"
            android:layout_marginRight="@dimen/data_form_editor_margin_horizontal"
            android:padding="6dp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium" />

        <TextView android:textColor="#BF3136"
            android:textStyle="bold"
            android:gravity="end"
            android:text="13 tables left"
            android:textSize="@dimen/data_form_editor_header_text_size"
            android:padding="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toRightOf="@id/data_form_group_header"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingTop="12dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_dataform_table"
            style="@style/DataFormImageView"
            android:layout_width="40dp"/>

        <FrameLayout
            android:id="@+id/data_form_editor_group_container"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>